{% extends 'base-admin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        
        <div class="col-12">
        <h1 class="mt-4">Fleet</h1>
				<table class="table">

					<thead>
						<tr>
							<th scope="col" class="d-none d-sm-table-cell">#</th>
							<th scope="col">Name</th>
							<th scope="col">Model</th>
							<th scope="col" class="d-none d-md-table-cell">Capacity</th>
							<th scope="col" class="d-none d-md-table-cell">In use?</th>
							<th scope="col" class="d-none d-sm-table-cell">Airport</th>
							<th scope="col" class="d-none d-sm-table-cell">Actions</th>
							<th scope="col" class="d-sm-none">Act</th>
						</tr>
					</thead>

					<tbody>
					
							{% set count = 1 %}
						{% for plane in planes %}
						<tr>
						<th class="d-none d-sm-table-cell" scope="row">{{ count }}</th>
									{% set count = count + 1 %}
							<td>{{ plane.aircraft_name }}</td>
							<td>{{ plane.model }}</td>
							<td class="d-none d-sm-table-cell">{{ plane.payload }}T</td>
							<td class="d-none d-sm-table-cell">
							
								{% if (plane.in_use == 1) %}
									Yes
								{% else %}
									No
								{% endif %}
							</td>
							<td class="d-none d-sm-table-cell">{{ plane.city }}</td>
							<td>
									<a href="editPlane/{{plane.id}}" class="btn-icon">
									<img src="assets/images/iconly/draw/Delete.svg" />
								</a>

								<button class="no-border" data-bs-toggle="modal" data-bs-target="#deleteModal-{{ plane.id }}">
								<img src="assets/images/iconly/draw/Edit.svg" />
								</button>
								

							</td>
						</tr>
						{% endfor %}
					</tbody>
	</table>
		{# #### PAGINATION CONTROLS STARTS HERE ### #}
				{% if products is not null %}
					<div class="d-flex justify-content-center mt-0 my-3 mt-md-5">
					
					</div>
				{% endif %}
				{# #####  PAGINATION CONTROLS ENDS HERE ##### #}
	<a href="addPlane" class="btn btn-primary">Add plane</a>

        </div>
    </div>
</div>

{% endblock %}