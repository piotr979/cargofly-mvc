{% extends 'base-admin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        
        <div class="col-12">
        <h1 class="mt-4">Fleet</h1>
        
				<table class="table">

					<thead>
						<tr>
							<th scope="col" class="d-none d-sm-table-cell">#</th>
							<th scope="col">Name</th>
							<th scope="col">Model</th>
							<th scope="col" class="d-none d-md-table-cell">Capacity</th>
							<th scope="col" class="d-none d-md-table-cell">In use?</th>
							<th scope="col" class="d-none d-sm-table-cell">Order</th>
							<th scope="col" class="d-none d-sm-table-cell">Actions</th>
							<th scope="col" class="d-sm-none">Act</th>
						</tr>
					</thead>

					<tbody>
					
							{% set count = 1 %}
						{% for plane in fleet %}
						<tr>
						<th class="d-none d-sm-table-cell" scope="row">{{ count }}</th>
									{% set count = count + 1 %}
							<td>{{ product.brand }}</td>
							<td>{{ product.model }}</td>
							<td class="d-none d-sm-table-cell">{{ product.price }}</td>
							<td class="d-none d-sm-table-cell">
								{{ product.total_qty }}
							</td>
							<td class="d-none d-sm-table-cell">{{ product.category }}</td>
							<td>
									<a href="" class="btn-icon">
									<i class="bi bi-pencil-square"></i>
								</a>
								<button class="btn-trash" data-bs-toggle="modal" data-bs-target="#deleteModal-{{ product.id }}">
								<i class="bi bi-trash"></i>
								</button>
								

							</td>
						</tr>
						{% endfor %}
					</tbody>
	</table>
		{# #### PAGINATION CONTROLS STARTS HERE ### #}
				{% if products is not null %}
					<div class="d-flex justify-content-center mt-0 my-3 mt-md-5">
					
					</div>
				{% endif %}
				{# #####  PAGINATION CONTROLS ENDS HERE ##### #}
	<a href="addPlane" class="btn btn-primary">Add plane</a>

        </div>
    </div>
</div>

{% endblock %}